{
	"compilerOptions": {
		"target": "ES2017",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": [
				"./*"
			],
			"@enterprise/*": [
				"./app/workspace/enterprise/*",
				"./app/workspace/_fallbacks/enterprise/*"
			],
			"@schemas/*": [
				"./app/workspace/enterprise/lib/schemas/*",
				"./app/workspace/_fallbacks/enterprise/lib/schemas/*"
			]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"next-env.d.ts",
		"out/types/**/*.ts",
		"out/dev/types/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}